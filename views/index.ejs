<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <style>
      html,
      body {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-size: 16px;
      }
      * {
        padding: 0;
        margin: 0;
      }
      a {
        color: inherit;
        text-decoration: none;
      }
      .container {
        max-width: 1340px;
        margin: 0 auto;
        padding: 0 0.5rem;
      }
      .login {
        display: flex;
        justify-content: center;
        flex-direction: column;
        align-items: center;
        margin: 2rem auto 0 auto;
        border: 1px solid #cccccc;
        border-radius: 5px;
        padding: 1rem;
        max-width: 30rem;
      }
      .login h2 {
        margin-bottom: 1rem;
        text-align: center;
      }
      .social-btn {
        color: #fff;
        font-weight: 700;
        padding: 0.6rem 0.75rem;
        border-radius: 4px;
        opacity: 0.85;
        cursor: pointer;
        margin-bottom: 0.75rem;
        width: 12rem;
      }
      .social-btn:hover {
        opacity: 1;
      }
      .google-btn {
        background: #dd4b39;
      }
      .facebook-btn {
        background: #3b5998;
      }
      .github-btn {
        background: #2a2a2a;
      }
    </style>
  </head>
  <body>
    <%- include('partials/navbar.ejs', { user: user }) %>
    <div class="container">
      <form class="login">
        <h2>Login with Oauth20</h2>
        <div class="social-btn google-btn">
          <a href="/auth/google">
            <i class="fa fa-google fa-fw"></i> Login with Google+
          </a>
        </div>
        <div class="social-btn facebook-btn">
          <a href="/auth/facebook">
            <i class="fa fa-facebook-square" aria-hidden="true"></i> Login with
            Facebook
          </a>
        </div>
        <div class="social-btn github-btn">
          <a href="/auth/github">
            <i class="fa fa-github" aria-hidden="true"></i> Login with Github
          </a>
        </div>
      </form>
    </div>
  </body>
</html>
